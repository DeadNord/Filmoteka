<div class="filter container">
    <h3 class="hero__tittle--hide">Filter Movie</h3>
    <div class='filter-inputs'>
        <div class="filter__movie-sort card ">
            <input class="filter-input__sort" name="sort" placeholder="Sort by" readonly>
            <svg class="filter-icon" width="18px" height="18px">
                <use href="{{svg}}#icon-down-arrow"></use>
            </svg>
            <ul class="filter-list__sort">
                <li class="filter-item__sort" data-atribute='popularity.desc'>Popularity (decreasing)</li>
                <li class="filter-item__sort" data-atribute='popularity.asc'>Popularity (increasing)</li>
                <li class="filter-item__sort" data-atribute='primary_release_date.desc'>Release date (decreasing)</li>
                <li class="filter-item__sort" data-atribute='primary_release_date.asc'>Release date (ascending)</li>
                <li class="filter-item__sort" data-atribute='original_title.asc'>Name (A-Z)</li>
                <li class="filter-item__sort" data-atribute='original_title.desc'>Name (Z-A)</li>
            </ul>
        </div>
        <div class="filter__movie-genres">
            <input class="filter-input__genres" name="genre" placeholder="Select genre" readonly>
            <svg class="filter-icon" width="18px" height="18px">
                <use href="{{svg}}#icon-down-arrow"></use>
            </svg>
            <ul class="filter-list__genres">
                {{#each filterItemGenre.itemGenre}}
                <li class=" filter-item__genres" id={{this.id}}>{{this.name}}</li>
                {{/each}}
            </ul>
        </div>
        <div class="filter__movie-year">
            <input class="filter-input__year" name="year" placeholder="Select year" readonly>
            <svg class="filter-icon" width="18px" height="18px">
                <use href="{{svg}}#icon-down-arrow"></use>
            </svg>
            <ul class="filter-list__year">
                {{#each filterItemYear.year}}
                <li class="filter-item__year">{{this}}</li>
                {{/each}}
            </ul>
        </div>
    </div>
    <button class="button__filter-clear" type="button">Clear all filters</button>
</div>