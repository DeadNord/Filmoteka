<div class='modal-theme'>
  <div class='modal-theme__scroll-box'>
    <form name='theme'>
      <label>
        <input type='checkbox' name='theme-switcher' value='Dark theme' />
      </label>
      <div class='palitre'>

        <canvas class='palitre__brightness' width='650' height='650'></canvas>

        <canvas class='palitre__ring' width='650' height='650'></canvas>
        {{! <div class='palitre__ring'></div> }}
        <div class='palitre__current-color'>

        </div><canvas
          class='palitre__saturation'
          width='650'
          height='650'
        ></canvas>

      </div>
      <div class='modal-theme__checklist-box'>
        <label>
          <input
            type='checkbox'
            name='theme-switcher'
            value='Background image'
          />
        </label>
        <label>
          <input
            type='checkbox'
            name='theme-switcher'
            value='Change background image with interval'
          />
        </label>
        <label>
          <input
            type='checkbox'
            name='theme-switcher'
            value='Change background color with interval '
          />
        </label>
      </div>

      <div class='modal-theme__button-box'>
        <button class='modal-theme__button'>Add to watched</button>
        <button class='modal-theme__button'>Add to queue</button>
      </div>
    </form>
  </div>
</div>